#Maintainer: Chris Cromer <cromer@cromnix.org>

pkgname=lxdm-lfs
pkgver=20170127
pkgrel=1
pkgdesc='lfs init scripts for lxdm'
arch=('any')
url='http://www.lxde.org'
license=('custom')
depends=('sysvinit')
provides=('lxdm-init')
makedepends=("blfs-bootscripts=${pkgver}")

package() {
	cd /usr/src/blfs-bootscripts
	make DESTDIR="${pkgdir}" install-lxdm
}
