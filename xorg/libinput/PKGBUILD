# Maintainer: Chris Cromer <chris@cromer.cl>

pkgname=libinput
pkgver=1.8.0
pkgrel=1
pkgdesc='libinput is a library that handles input devices for display servers and other applications that need to directly deal with input devices'
arch=('x86_64')
url='https://xorg.freedesktop.org/'
license=('custom:X11')
depends=('mtdev' 'libevdev')
makedepends=('python' 'check')
source=("http://www.freedesktop.org/software/${pkgname}/${pkgname}-${pkgver}.tar.xz")
md5sums=('f12066eeda3e1aeaa65eeca4b9ad833d')

# todo: rebuid with doxygen

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr \
		--libdir=/usr/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-libwacom \
		--disable-tests \
		--disable-debug-gui \
		--with-udev-dir=/usr/lib/udev \
		--disable-documentation \
		--disable-static
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
	rm -f ${pkgdir}/usr/bin/xkeystone
}
