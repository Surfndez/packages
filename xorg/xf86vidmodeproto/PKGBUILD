# Maintainer: Chris Cromer <chris@cromer.cl>

pkgname=xf86vidmodeproto
pkgver=2.3.1
pkgrel=1
pkgdesc='X11 Video Mode extension wire protocol'
arch=('any')
url='https://www.x.org/wiki/'
license=('custom')
makedepends=('util-macros' 'xmlto' 'docbook-xml' 'asciidoc')
source=("http://ftp.x.org/pub/individual/proto/${pkgname}-${pkgver}.tar.bz2")
md5sums=('e793ecefeaecfeabd1aed6a01095174e')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}
