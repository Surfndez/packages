pkgname=mirrorlist
pkgver=20170618
pkgrel=1
pkgdesc='List of mirrors for pacman'
arch=('any')
url='https://www.cromnix.org'
license=('BSD3')
groups=('cromnix-base')
source=('mirrorlist')
md5sums=('3d6ac36bd8899430781739204e93f310')

pkgver() {
	date +%Y%m%d
}

package() {
	install -Dm0644 "${srcdir}"/mirrorlist "${pkgdir}"/etc/pacman.d/mirrorlist
}
